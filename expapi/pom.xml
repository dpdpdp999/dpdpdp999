							<http>
								<inbound>
									<lastMileSecurity>false</lastMileSecurity>
									<forwardSslSession>false</forwardSslSession>
								</inbound>
							</http>
						</deploymentSettings>
						<server>ca.anypoint.credentials</server>
						<integrations>
							<services>
								<objectStoreV2>
									<enabled>true</enabled>
								</objectStoreV2>
							</services>
						</integrations>
